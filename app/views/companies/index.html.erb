  </div>

   <div class="col-sm-9">
      <div class="locations">
      <% company.locations.each do |location| %>
         <div class="col-sm-3">
            <div class="location">
               <h1><%= location.name %></h1>
               <p>Straatnaam en huisnummer: <%= location.address %></p>
               <p>Postcode: <%= location.postal_code %></p>
               <p>Stad: <%= location.city %></p>
               <p><%= link_to 'Locatie Bewerken', company_location_path(company, location) %></p>
               <p><%= link_to 'Locatie Verwijderen', company_location_path(company, location), method: :delete, data: { confirm: "Are you sure?" } %></p>
            </div>
         </div>
      <% end %>
      </div>
   </div>

  <% end %>
</div>

