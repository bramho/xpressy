
<h1 style="text-align: center;">Company Settings</h1>

<% if Company.exists? %>
   <!-- <% @companies.each do |company| %>
      <h3><%= link_to 'View locations', company_locations_path(company) %></h3>
   <% end %> -->
<% end %>

<div class="col-md-3">
   <div class="company-wrapper">
      <% if Company.exists? %>
         <% @companies.each do |company| %>
            <h2 class="title" style="text-align: center"><%= company.name %></h2>
            <div class="container">
               <p class="description">
                  <b>Description: </b><br />
                  <%= company.description %>
               </p>

               <p class="address">
                  <b>Address: </b><br />
                  <%= company.address %>
               </p>

               <p class="postal_code">
                  <b>Postal Code: </b><br />
                  <%= company.postal_code %>
               </p>

               <p class="city">
                  <b>City: </b><br />
                  <%= company.city %>
               </p>

               <p class="edit-company">
                  <%= link_to 'Edit Company', edit_company_path(company) %>
               </p>
            </div>
         <% end %>

      <% else %>
         <h2 class="title"><%= link_to 'Create company', new_company_path %></h2>

      <% end %>
    <% end %>
  </div>
</div>

<div class="col-md-9">
   <h1 style="text-align:center;">Locations  - <%= link_to "Add new location", new_company_location_path(@companies.ids) %></h1>
   <% @companies.each do |company| %>
      <div class="col-md-3">
         <% company.locations.each do |location| %>
            <h1 style="text-align:center;"><%= location.name %></h1>
            <p>
               <b>Address</b><br />
               <%= location.address %>
            </p>
            <p>
               <b>Postal Code</b><br />
               <%= location.postal_code %>
            </p>
            <p>
               <b>City</b><br />
               <%= location.city %>
            </p>
            <p>
               <b>Country</b><br />
               <%= location.country %>
            </p>
            <p>
               <b><%= link_to 'Edit', edit_company_location_path(company, location) %></b><br />

               <b><%= link_to 'Delete', company_location_path(company, location), method: :delete, data: { confirm: "Are you sure?" } %></b>
            </p>
         <% end %>
      </div>
   <% end %>
