<!DOCTYPE html>
<html>
  <head>
    <title>XpressyApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/ad3908c2e9.js"></script>
    <script src="cbpFWTabs.js"></script>
    <script src="modernizr.custom.js"></script>
  </head>

  <body>
      <header class="header">

        <div class="tabs tabs-style-linemove">
          <nav>
            <ul>
            <% if user_signed_in? %>
              <li><%= link_to (raw('<span>Home</span>')), root_path, class:"" %></a></li>
              <li><%= link_to (raw('<span>Company Settings</span>')), companies_path, class:"" %></a></li>
              <li><%= link_to (raw('<span>Sign Out</span>')), destroy_user_session_path, :method => :delete, class:"" %></a></li>

            <% if current_user.admin? %>
              <li><%= link_to (raw('<span>Sign Up New User</span>')), new_user_by_admin_path, class:"" %></a></li>
            <% end %>

            <% else %>
              <li><%= link_to (raw('<span>Sign In</span>')), new_user_session_path, class:"" %></a></li>
            <% end %>

            </ul>
          </nav>
        </div><!-- /tabs -->

      </header>

   <% flash.each do |name, msg| %>

      <%= content_tag(:div, msg, class: "alert") %>

   <% end %>

   <div class="container-fluid background">
      <%= yield %>
   </div>
  </body>
</html>
