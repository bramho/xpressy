<% @vacancies.each do |vacancy| %>

  <div class="col-sm-6 col-md-4 col-lg-3">
    <div class="vacancy-wrapper">
       <h2 class="title"><%= link_to vacancy.title, vacancy %></h2>
       <p class="description"><%= vacancy.description %></p>
       <p class="updated">Voor het laatst gewijzigd op: <%= vacancy.updated_at %></p>
    </div>
    <div class="vacancy-options">
      <img src="http://placehold.it/50x50" class="img-circle">
      <%= link_to "Bewerken", edit_vacancy_path(vacancy) %>

      <% if vacancy.online %>
         <input type="radio" name="on_off_<%= vacancy.id %>" value="on" checked="checked"> On
         <input type="radio" name="on_off_<%= vacancy.id %>" value="off"> Off
      <% else %>
      <input type="radio" name="on_off_<%= vacancy.id %>" value="on"> On
      <input type="radio" name="on_off_<%= vacancy.id %>" value="off" checked="checked"> Off
      <% end %>
    </div>
  </div>

<% end %>

</div>
