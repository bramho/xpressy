<%= link_to "Back", root_path %>

      <% if user_signed_in? %>
         |
<%= link_to "Edit", edit_vacancy_path(@vacancy) %>
         |
<%= link_to "Delete", vacancy_path(@vacancy), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

      <div class="pull-right reaction-icons">
        <a href="#"><i class="fa fa-times cross" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-question question" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-check check" aria-hidden="true"></i></a>
      </div>

    <div class="reactions">
    <% @vacancy.reactions.each do |reaction| %>
      <div class="reaction">
        <a href="#"><%= reaction.first_name %> <%= reaction.last_name %></a>
        <div class="pull-right reaction-icons">
          <a href="#"><i class="fa fa-times cross" aria-hidden="true"></i></a>
          <a href="#"><i class="fa fa-question question" aria-hidden="true"></i></a>
          <a href="#"><i class="fa fa-check check" aria-hidden="true"></i></a>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="col-sm-9 xpressheet">
    <img src="http://placehold.it/1000x1000" class="img-responsive">
  </div>

</div>
