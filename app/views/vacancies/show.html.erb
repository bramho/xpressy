<div class="row">
  <div class="col-sm-3 vacancy-candidates">
    <h2>Sollicitanten</h2>
    <h3>Filters</h3>
      <ul>
        <li><a href="#">MBO4 +</a></li>
        <li><a href="#">HBO -</a></li>
        <li><a href="#">HTML - +</a></li>
        <li><a href="#">CSS +</a></li>
        <li><a href="#">PHP +</a></li>
      </ul>

<%= link_to "Back", root_path %>

      <% if user_signed_in? %>
         |
<%= link_to "Edit", edit_vacancy_path(@vacancy) %>
         |
<%= link_to "Delete", vacancy_path(@vacancy), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

    <% @vacancy.reactions.each do |reaction| %>
      <div class="reaction">
        <%= link_to reaction.first_name + ' ' + reaction.last_name, vacancy_reaction_path(reaction) %>

         <%= (reaction.distance_to(Location.find(@vacancy.location_id)) * 1.61).round(2) %> km

        <div class="pull-right reaction-icons">
          <%= link_to vacancy_reaction_path(@vacancy, reaction), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-times" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    <% end %>

      <div class="reaction-form">
         <%= render 'reactions/form' %>
      </div>
  </div>

  <div class="col-sm-9 xpressheet">
    <h1><%= @vacancy.title %></h1>
    <img src="http://placehold.it/1000x800" class="img-responsive">
  </div>

</div>
