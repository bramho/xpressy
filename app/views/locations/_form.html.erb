<%= form_for([@company, @location]) do |f| %>
   <% if @location.errors.any? %>
      <div id="errors">
         <h2><%= pluralize(@location.errors.count, "error") %> prevented this location from saving.</h2>
         <ul>
            <% @location.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
         </ul>
      </div>
   <% end %>

   <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
   </p>

   <p>
      <%= f.label :address %><br />
      <%= f.text_field :address %>
   </p>

   <p>
      <%= f.label :postal_code %><br />
      <%= f.text_field :postal_code %>
   </p>

   <p>
      <%= f.label :city %><br />
      <%= f.text_field :city %>
   </p>

   <p>
      <%= f.label :country %><br />
      <%= f.text_field :country %>
   </p>

   <p>
      <%= f.submit %>
   </p>

<% end %>
