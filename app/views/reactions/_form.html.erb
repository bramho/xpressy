<%= form_for([@vacancy, @vacancy.reactions.build]) do |f| %>

   <p>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
   </p>

   <p>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
   </p>

   <p>
      <%= f.label :address %><br />
      <%= f.text_field :address %>
   </p>

   <p>
      <%= f.label :postal_code %><br />
      <%= f.text_field :postal_code %>
   </p>

   <p>
      <%= f.label :city %><br />
      <%= f.text_field :city %>
   </p>

   <p>
      <%= f.label :country %><br />
      <%= f.text_field :country %>
   </p>

   <p>
      <%= f.label :age %><br />
      <%= f.number_field :age %>
   </p>

   <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
   </p>

   <p>
      <%= f.label :education %><br />
      <%= f.text_field :education %>
   </p>

   <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
   </p>

   <p>
      <%= f.submit %>
   </p>

<% end %>
