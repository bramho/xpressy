<%= form_for([@vacancy, @vacancy.reactions.build]) do |f| %>

   <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
   </p>

   <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
   </p>

   <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
   </p>

   <p>
      <%= f.submit %>
   </p>

<% end %>
