<div class="user-wrapper">

	<h1>Uw wachtwoord vergeten?</h1>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>



		<span class="input input--kaede">
		  <%= f.email_field :email, class: 'input__field input__field--kaede' %>
		  
		  <label class="input__label input__label--kaede" for="password_email">
		     
		     <span class="input__label-content input__label-content--kaede"> E-mailadres</span>

		  </label>
		</span>

	  <div class="actions">
	    <%= f.submit "Verzend instructies" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>



